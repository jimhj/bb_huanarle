.consumptions
  
  .content-container.clearfix
    %p
      %button.btn.btn-success 新建消费记录
    #table_view
    #form_view

  .loading-view.clearfix{ :style => "display:none;" }
    .progress.progress-striped.active
      .bar.bar-info{ :style => 'width:100%;' }  

/ Templates
%script#totals_list-template{ :type => 'text/template' }
  %thead
    %tr
      %th #
      %th 日期
      %th 笔数
      %th 总额
      %th 备注
  %tbody

%script#total-template{ :type => 'text/template' }
  %td <%= id %>
  %td <%= date %>
  %td <%= consumptions_count %>
  %td <%= total_cost %>
  %td <%= remarks %>

%script#cons_list-template{ :type => 'text/template' }
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th #
        %th 时间
        %th 金额
        %th 备注
    %tbody
  .backto
    %button.btn.btn-primary 返回列表

%script#con-template{ :type => 'text/template' }
  %td <%= id %>
  %td <%= created_at %>
  %td <%= cost %>
  %td <%= desc %>

%script#new_con-template{ :type => 'text/template' }
  .alert.alert-block.alert-error.fade.in.hide
    %button.close{ :'data-dismiss' => 'alert', :type => 'button' } x

  %form.form-horizontal.new_cons_form
    .control-group
      %label.control-label{ :for => 'date' } 填写日期
      .controls
        %input#conDate{ :type => 'text', :placeholder => "填写日期 如：2012-12-25" }

    .control-group
      %label.control-label{ :for => 'cost' } 消费金额
      .controls
        %input#conCost{ :type => 'text', :placeholder => "消费金额" }

    .control-group
      %label.control-label{ :for => 'remarks' } 备注
      .controls
        %input#conRemarks{ :type => 'text', :placeholder => "备注" }                

  .backto
    %button.btn.btn-danger 确定
    %button.btn.btn-primary 返回列表


